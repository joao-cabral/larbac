---
import Card from '../../../components/Card.astro';
import Layout from '../../../layouts/index.astro';

const backgroundColor = "#DC8983";
const borderRadius = "24px"
---

<Layout  title="mmstoream" header={false}>
	<main>
		<h1 class="title">mmstoream</h1>
		<p>
			Loja de roupas.<br />
			Veja o catalogo e acesse as redes sociais.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Catalago"
				body=""
				borderRadius={borderRadius}
				backgroundColor={backgroundColor}
			/>
			<Card
				href="https://astro.build/integrations/"
				title="Integrations"
				body="Supercharge your project with new frameworks and libraries."
			/>
		</ul>
	</main>
</Layout>

<style define:vars={{ backgroundColor }}>
	main {
		margin: auto;
		padding: 1rem;
		/* width: 800px; */
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
        background-color: var(--backgroundColor);
	}
    .title {
    font-size: min(10rem, 8vw);
    min-width: 100vw;
    text-align: center;
    margin: 0 auto;
    margin-bottom: 10.5rem;
    margin-left: 50%;
    transform: translateX(-50%);
    }
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
