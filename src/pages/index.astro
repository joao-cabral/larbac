				svg {
					color: var(--persian-indigo);
				}
			}


			svg,a {
				transition: color 150ms ease-in-out;
			}
  
			svg {
				width: 5rem;
				height: 5rem;
				position: absolute;
				left: 0;
				right: 0;
				top: 0;
				bottom: 0;
				margin: auto;
				z-index: -1;
			}
  
