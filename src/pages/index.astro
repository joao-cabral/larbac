      .r-green {
        color: #4ade80;
      }
    }

    .role {
      font-size: 1.1rem;
      color: rgba(255, 255, 255, 0.8);
      margin: 0.5rem 0;
      font-weight: 500;
    }

    .description {
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.7);
      margin-top: 1rem;
      line-height: 1.4;
      max-width: 280px;
    }
