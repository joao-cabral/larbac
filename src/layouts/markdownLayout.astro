---
import Layout from '../layouts/index.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} header={false}>
    <div class="markdown-container">
        <div class="markdown-content">
            <div class="navigation-buttons">
                <button class="back-button" onclick="history.back()">
                    ‚Üê Voltar
                </button>
                <button class="download-button" onclick="window.print()">
                    üìÑ Download PDF
                </button>
            </div>
            <h1 class="markdown-title">{frontmatter.title}</h1>
            <main class="markdown-main">
                <slot />
            </main>
        </div>
    </div>
</Layout>

<style lang='scss'>
    :root {
        --color-primary: black !important;
        --color-secondary: black !important;
    }

    body {
        background-color: #f5f5f5;
        color: black !important;
        margin: 0;
        padding: 0;
    }

    .markdown-container {
        min-height: 100vh;
        background-color: #f5f5f5;
        padding: 2rem 1rem;
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .markdown-content {
        max-width: 800px;
        width: 100%;
        background-color: white;
        padding: 3rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        line-height: 1.6;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

        @media (max-width: 768px) {
            padding: 2rem 1.5rem;
            margin: 0;
        }

        @media (max-width: 480px) {
            padding: 1.5rem 1rem;
        }
    }

    .navigation-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        gap: 1rem;

        @media (max-width: 480px) {
            flex-direction: column;
            gap: 0.75rem;
        }
    }

    .back-button, .download-button {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: inherit;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;

        @media (max-width: 480px) {
            width: 100%;
            justify-content: center;
        }
    }

    .back-button {
        background-color: #f7fafc;
        color: #2d3748;
        border: 1px solid #e2e8f0;

        &:hover {
            background-color: #edf2f7;
            border-color: #cbd5e0;
            transform: translateY(-1px);
        }
    }

    .download-button {
        background-color: #4299e1;
        color: white;
        border: 1px solid #4299e1;

        &:hover {
            background-color: #3182ce;
            border-color: #3182ce;
            transform: translateY(-1px);
        }
    }

    .markdown-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 2rem 0;
        color: #1a1a1a;
        text-align: center;
        border-bottom: 2px solid #e5e5e5;
        padding-bottom: 1rem;

        @media (max-width: 768px) {
            font-size: 2rem;
        }

        @media (max-width: 480px) {
            font-size: 1.75rem;
        }
    }

    .markdown-main {
        :global(h1) {
            font-size: 2rem;
            font-weight: 600;
            margin: 2rem 0 1rem 0;
            color: #2d3748;
            border-bottom: 1px solid #e2e8f0;
            padding-bottom: 0.5rem;
        }

        :global(h2) {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 1.5rem 0 1rem 0;
            color: #2d3748;
        }

        :global(h3) {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 1.25rem 0 0.75rem 0;
            color: #4a5568;
        }

        :global(p) {
            margin: 1rem 0;
            color: #2d3748;
            text-align: justify;
        }

        :global(ul, ol) {
            margin: 1rem 0;
            padding-left: 2rem;
            color: #2d3748;
        }

        :global(li) {
            margin: 0.5rem 0;
        }

        :global(strong) {
            font-weight: 600;
            color: #1a202c;
        }

        :global(code) {
            background-color: #f7fafc;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-family: 'Fira Code', 'Consolas', monospace;
            font-size: 0.9em;
            color: #e53e3e;
        }

        :global(pre) {
            background-color: #2d3748;
            color: #e2e8f0;
            padding: 1rem;
            border-radius: 8px;
            overflow-x: auto;
            margin: 1.5rem 0;
        }

        :global(blockquote) {
            border-left: 4px solid #4299e1;
            padding-left: 1rem;
            margin: 1.5rem 0;
            color: #4a5568;
            font-style: italic;
        }

        :global(a) {
            color: #4299e1;
            text-decoration: none;
            
            &:hover {
                text-decoration: underline;
            }
        }

        :global(img) {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 1rem 0;
        }

        :global(table) {
            width: 100%;
            border-collapse: collapse;
            margin: 1.5rem 0;
        }

        :global(th, td) {
            border: 1px solid #e2e8f0;
            padding: 0.75rem;
            text-align: left;
        }

        :global(th) {
            background-color: #f7fafc;
            font-weight: 600;
        }
    }

    /* Estilos para impress√£o */
    @media print {
        .navigation-buttons {
            display: none !important;
        }

        .markdown-container {
            background-color: white;
            padding: 0;
            min-height: auto;
        }

        .markdown-content {
            box-shadow: none;
            border-radius: 0;
            padding: 1rem;
            margin: 0;
        }

        .markdown-title {
            margin-top: 0;
            page-break-after: avoid;
        }

        .markdown-main {
            :global(h1, h2, h3) {
                page-break-after: avoid;
            }

            :global(pre) {
                page-break-inside: avoid;
            }
        }
    }
</style>