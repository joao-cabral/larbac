---
interface Props {
	borderRadius?: string;
    src: string;
}

const { borderRadius, src } = Astro.props;
---

<img class="logo" src={src} alt="mmstoream">

<style define:vars={{ borderRadius }}>
	.logo {
        height: 12rem;
        width: 12rem;
		border-radius: 50%;
        display: flex;
        margin: auto;
	}
</style>
